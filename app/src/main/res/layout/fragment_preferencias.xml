<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragment.PreferenciasFragment">

    <LinearLayout
        android:id="@+id/menuEditarConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_editar_perfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:tint="@color/colorTitulo"/>

        <TextView
            android:id="@+id/text_editar_conta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:fontFamily="@font/sfprodisplay_medium"
            android:textColor="@color/colorTitulo"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"
            android:text="Editar Perfil"/>

        <ImageView
            android:id="@+id/abir_editar_conta"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/ic_arrow_right_black_24dp" />

    </LinearLayout>

    <include layout="@layout/column_divider"/>

    <LinearLayout
        android:id="@+id/menuNotificacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_notificacoes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            android:tint="@color/colorTitulo"/>

        <TextView
            android:id="@+id/text_notificacoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="2"
            android:fontFamily="@font/sfprodisplay_medium"
            android:textColor="@color/colorTitulo"
            android:text="Notificações"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/editar_notificacoes"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/ic_arrow_right_black_24dp" />
    </LinearLayout>

    <include layout="@layout/column_divider"/>

    <LinearLayout
        android:id="@+id/menu_formas_pagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_payment_black_24dp"
            android:tint="@color/colorTitulo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:fontFamily="@font/sfprodisplay_medium"
            android:textColor="@color/colorTitulo"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"
            android:text="Pagamento"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/ic_arrow_right_black_24dp" />
    </LinearLayout>

    <include layout="@layout/column_divider"/>

    <LinearLayout
        android:id="@+id/menuCompatilharEasyCash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_compartilhar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_cupom"
            android:tint="@color/colorTitulo"/>

        <TextView
            android:id="@+id/text_compartilhar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="2"
            android:fontFamily="@font/sfprodisplay_medium"
            android:textColor="@color/colorTitulo"
            android:text="Cupom de Desconto"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/abrir_compartilhar"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/ic_arrow_right_black_24dp" />
    </LinearLayout>

    <include layout="@layout/column_divider"/>

    <LinearLayout
        android:id="@+id/menuSobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_sobre"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_info_outline_black_24dp"
            android:tint="@color/colorTitulo"/>

        <TextView
            android:id="@+id/text_sobre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="2"
            android:fontFamily="@font/sfprodisplay_medium"
            android:textColor="@color/colorTitulo"
            android:text="Sobre nós"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/abrir_sobre"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/ic_arrow_right_black_24dp" />
    </LinearLayout>

    <include layout="@layout/column_divider"/>

    <LinearLayout
        android:id="@+id/menuSair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_sair"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_input_black_24dp"
            android:tint="@color/colorTitulo"/>

        <TextView
            android:id="@+id/text_sair"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="2"
            android:fontFamily="@font/sfprodisplay_medium"
            android:textColor="@color/colorTitulo"
            android:text="Finalizar sessão"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/abrir_sair"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/ic_arrow_right_black_24dp" />
    </LinearLayout>


</LinearLayout>