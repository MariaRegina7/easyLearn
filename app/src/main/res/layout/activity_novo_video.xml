<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.NovoVideoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarVideo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolbar"
        android:elevation="1dp"
        app:title="Novo vídeo"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/colorTituloActionBar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uploadVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imgUploadVideo"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_upload"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Selecione um arquivo para enviar"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorTitulo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgUploadVideo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/sfprodisplay_semibold"
        android:text="Nome do Vídeo"
        android:textColor="@color/colorDescricao"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editNomeVideo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorEditText"
        android:ems="10"
        android:hint="Ex: Apresentação do curso"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/colorDescricao" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/sfprodisplay_semibold"
        android:text="Descrição"
        android:textColor="@color/colorDescricao"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editDescricaoVideo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorEditText"
        android:ems="10"
        android:hint="Ex: Nesta aula, você aprenderá..."
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/colorDescricao" />

    <Button
        android:id="@+id/btnIncluirMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/button_primary"
        android:text="Incluir Material de Apoio"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <!-- include layout="@layout/column_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4dp"
        android:layout_margin="25dp"/>

    <Button
        android:id="@+id/btnAdicionarVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/button_primary"
        android:text="Salvar e Retornar"
        android:textAllCaps="false"
        android:textColor="@color/white" /> -->

</LinearLayout>