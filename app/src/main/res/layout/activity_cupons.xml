<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundo"
    android:orientation="vertical"
    tools:context=".activity.CuponsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCupom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolbar"
        android:elevation="1dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Cupom de Desconto"
        app:titleTextColor="@color/colorTituloActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Insira seu cÃ³digo"
            android:textColor="@color/colorTitulo"
            android:textSize="20sp"
            android:fontFamily="@font/sfprodisplay_regular"/>

        <EditText
            android:id="@+id/txt_cupomDesconto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Digite o cupom"
            android:singleLine="true"
            android:background="@color/colorFundo"
            android:textColorHint="@color/colorDiv"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/colorDiv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termos de uso"
                android:fontFamily="@font/sfprodisplay_regular"
                android:textColor="@color/colorCheck"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorCheck"
                android:src="@drawable/ic_arrow_right_black_24dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirmar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/button_primary"
            android:textAllCaps="false"
            android:text="Confirmar"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/colorDiv" />

        <LinearLayout
            android:id="@+id/easyCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_local_activity_black_24dp"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/sfprodisplay_medium"
                android:text="Meu EasyCash"
                android:textSize="16sp"
                android:textColor="@color/colorTitulo"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
